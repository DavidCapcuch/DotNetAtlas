{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Polly": "Warning",
        "Microsoft.AspNetCore.SignalR": "Debug",
        "Microsoft.AspNetCore.Http.Connections": "Debug"
      }
    }
  },
  "Application": {
    "AppName": "DotNetAtlas"
  },
  "DataEndpoint": {
    "DefaultConnectionStringRef": "Weather"
  },
  "Authentication": {
    "JwtBearer": {
      "Authority": "http://localhost:9011",
      "TokenValidationParameters": {
        "ValidateIssuer": true,
        "ValidIssuer": "cme.com",
        "ValidateAudience": true,
        "ValidAudience": "e9fdb985-9173-4e01-9d73-ac2d60d1dc8e",
        "ValidateIssuerSigningKey": true,
        "RequireSignedTokens": true,
        "ValidateLifetime": true
      },
      "RequireHttpsMetadata": false
    }
  },
  "Swagger": {
    "OpenApiInfo": {
      "Title": "DotNetAtlas",
      "Description": "DotNet Atlas - Made with ❤️, Powered by ☕",
      "Version": "v1",
      "Contact": {
        "Name": "David Capcuch",
        "Url": "",
        "Email": "d.capcuch@gmail.com"
      },
      "Licence": {
        "Name": "All rights reserved",
        "Url": ""
      }
    },
    "OAuthConfig": {
      "Authority": "http://localhost:9011",
      "ClientId": "e9fdb985-9173-4e01-9d73-ac2d60d1dc8e",
      "ClientSecret": "super-secret-secret-that-should-be-regenerated-for-production",
      "ResponseType": "code",
      "RequireHttpsMetadata": false
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5159",
      "https://localhost:7095"
    ],
    "AllowWildcardSubdomains": true,
    "AllowedMethods": ["*"],
    "AllowedHeaders": ["*"],
    "ExposedHeaders": [],
    "AllowCredentials": true
  },
  "WeatherProviders": {
    "OpenMeteo": {
      "BaseUrl": "https://api.open-meteo.com/",
      "GeoBaseUrl": "https://geocoding-api.open-meteo.com/"
    },
    "WeatherApiCom": {
      "BaseUrl": "https://api.weatherapi.com/",
      "ApiKey": "1751c23e0f8c4157b3383940251509"
    }
  },
  "Weather": {
    "Hedging": {
      "PrimaryMaxDurationMs": 200
    }
  },
  "HttpResilience": {
    "TotalRequestTimeoutSeconds": 20,
    "AttemptTimeoutSeconds": 5,
    "RetryMaxAttempts": 3,
    "CircuitBreakerSamplingSeconds": 30,
    "CircuitBreakerMinimumThroughput": 100,
    "CircuitBreakerFailureRatio": 0.2,
    "CircuitBreakerBreakSeconds": 5
  },
  "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4317",
  "AllowedHosts": "*"
